% makes header
\newcommand{\makeheader}[2]{
    \vspace*{0cm} % get rid of random white space
    \noindent\makebox[\linewidth][c]{%
      \colorbox{\postertype}{%
        \parbox[t][0.2\paperheight][c]{\paperwidth}{%
            \hspace*{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
            \begin{minipage}{\textwidth}
            \textcolor{darkgray}
            {\fontsize{#1}{10} \selectfont
            \begin{flushleft}
                 \nohyphens{\@title}
            \end{flushleft}
            }
          \textcolor{purple}
            {\fontsize{#2}{10} \selectfont
            \begin{flushleft}
                 \nohyphens{\subtitle}
            \end{flushleft}
            }
          \end{minipage}%
        }%
      }%
    }\par\medskip

}

\def\@maketitle{
  \vspace{0cm}
    {\Huge \bf
        \textcolor{darkgray}
        {
            \begin{flushleft}
                \introduction
            \end{flushleft}
        }
    }
}

% makes footer
\newcommand{\makefooter}[0]{
    \vspace*{\fill}
    \noindent\makebox[\linewidth][c]{%
      \colorbox{\postertype}{%
        \parbox[c][0.10\paperheight][c]{\paperwidth}{%
          \hspace*{\dimexpr\hoffset+\oddsidemargin+1.2cm\relax}%
          \begin{minipage}[c][0.10\paperheight][c]{0.12\textwidth}
                \includegraphics[height=0.07\paperheight, left]{images/isdn-museumde.png}
          \end{minipage}
        }%
      }%
    }\par\medskip
}

